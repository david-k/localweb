{
	"manifest_version": 2,
	"name": "LocalWeb",
	"version": "0.1",
	"description": "Let's you save webpages, PDFs, images etc. to a local database that represents your own, local subset of the web.",
	"homepage_url": "https://github.com/david-k/localweb",
	"icons": {
		"32": "assets/icon_32.png"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "@localweb"
		}
	},

	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"run_at": "document_start",
			"js": [
				"vendor/SingleFile/lib/chrome-browser-polyfill.js",
				"vendor/SingleFile/lib/single-file-frames.js",
				"vendor/SingleFile/lib/single-file-extension-frames.js"
			],
			"all_frames": true,
			"match_about_blank": true
		},
		{
			"matches": [
				"<all_urls>"
			],
			"run_at": "document_start",
			"js": [
				"vendor/SingleFile/lib/chrome-browser-polyfill.js",
				"vendor/SingleFile/lib/single-file-bootstrap.js",
				"vendor/SingleFile/lib/single-file-extension-core.js",
				"vendor/SingleFile/lib/single-file.js"
			],
			"all_frames": false
		}
	],

	"background": {
		"scripts": [
			"vendor/SingleFile/lib/chrome-browser-polyfill.js",
			"vendor/SingleFile/lib/single-file-background.js"
		],
		"persistent": false
	},

	"permissions": ["activeTab", "<all_urls>", "nativeMessaging"],

	"browser_action": {
		"default_icon": "assets/icon_32.png",
		"default_title": "LocalWeb",
		"default_popup": "popup/index.html"
	}
}
